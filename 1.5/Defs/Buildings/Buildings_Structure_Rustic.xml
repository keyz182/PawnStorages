            <WoodLog>150</WoodLog>
            <Hay>150</Hay>
        </costList>
        <constructEffect>ConstructMetal</constructEffect>
        <placeWorkers>
            <li>PawnStorages.PlaceWorker_DrawRotationArrow</li>
